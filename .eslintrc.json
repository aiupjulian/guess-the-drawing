{
    "extends": [
        "airbnb"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "SERVER_HOST": true,
        "SERVER_PORT": true
    },
    "parser": "babel-eslint",
    "rules": {
        "linebreak-style": 0,
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "no-confusing-arrow": ["error", {"allowParens": true}],
        "jsx-a11y/mouse-events-have-key-events": 0,
        "max-len": ["error", { "code": 110 }]
    }
}